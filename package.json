{
  "name": "@bid-scents/shared-sdk",
  "version": "1.1.2",
  "description": "Shared SDK for marketplace applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "generate-api": "openapi -i http://localhost:8000/openapi.json -o src/api",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "keywords": ["marketplace", "sdk", "react", "typescript"],
  "author": "Shawarmaa",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BidScents/shared-sdk.git"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@tanstack/react-query": "^5.80.7",
    "zod": "^3.25.64",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "eslint": "^8.0.0",
    "openapi-typescript-codegen": "^0.29.0",
    "typescript": "^5.8.3",
    "vitest": "^1.0.0"
  }
}
